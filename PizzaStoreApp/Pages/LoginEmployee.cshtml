@page
@model PizzaStoreApp.Pages.LoginEmployeeModel
@{
}
<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>
@{
    var message = Model.ErrorMessage;
    if (message != null)
    {
        <h3>@Model.ErrorMessage</h3>
    }
}
<form class="col-6" method="post">
    <div class="m-2 p-3">
        <label asp-for="@Model.Account.Username">Username</label>
    <input class="form-control" type="text" asp-for="@Model.Account.Username"/>
    <span asp-validation-for="@Model.Account.Username"></span>
    </div>
    <div class="m-2 p-3">
        <label asp-for="@Model.Account.Password">Password</label>
    <input class="form-control" type="password" asp-for="@Model.Account.Password"/>
    <span asp-validation-for="@Model.Account.Password"></span>
    </div>
    <div class="m-2 p-3">
        <button>Login</button>
    </div>
</form>
